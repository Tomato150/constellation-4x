#:import math math
# Custom Styles of default Widgets
<Widget>:
    canvas.after:
        Color:
            rgba: (0,1,0,1)
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            dash_offset: 5
            dash_length: 3



<CustomButton@Button>:
    font_name: "Roboto"
    # The following properties are the basic styles
    size_hint: None, None

    font_size: dp(16)
    color: (0, 1, 0, 1)
    # Each button will contain a 'style_classes' property, which will then be called upon in the init
    style_classes: []

    on_state: self.button_pressed()


# Custom Widgets
<CustomNavbar@StackLayout>:
    name: ''
    orientation: 'lr-tb'
    size: self.parent.width, 50
    pos: self.parent.pos[0], self.parent.height - self.height + self.parent.pos[1]

<CustomSidebar@StackLayout>:
    name: ''
    orientation: 'tb-lr'
    size_hint_x: None
    size: 350, self.parent.height
    pos: self.parent.pos

<GalaxyViewer>


<GalaxyNavbar>:
    name: 'Global Navbar'
    open_close_menu: open_close_menu
    empire_menu: empire_menu
    system_menu: system_menu
    gap_widget: gap_widget
    galaxy_view: galaxy_view
    system_view: system_view
    style_classes: ['navbar_dark']

    CustomButton:
        id: open_close_menu
        name: 'open_close_menu'
        text: 'Open/Close Menu'
        style_classes: ["link", "link_nav_header", "primary"]

        on_press: app.ui_events['toggle_game_menu']()

    CustomButton:
        id: empire_menu
        name: 'empire_menu'
        text: 'Empire Overview'
        style_classes: ["link"]

    CustomButton:
        id: system_menu
        name: 'system_menu'
        text: 'System Overview'
        style_classes: ["link"]

    Widget:
        id: gap_widget
        name: 'gap_widget'
        size: 0, 50
        size_hint_x: None
        gap_widget: True

    CustomButton:
        id: galaxy_view
        name: 'galaxy_view'
        text: 'Galaxy View'
        style_classes: ["link"]

    CustomButton:
        id:system_view
        name: 'system_view'
        text: 'System View'
        style_classes: ["link"]


<GameMenu>:
    custom_navbar_game_menu: custom_navbar_game_menu
    orientation: 'horizontal'

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    CustomSidebar:
        pos: root.pos
        style_classes: ['sidebar_dark']
        CustomButton:
            text: 'Sidebar link 1'
            name: 'but1'
            style_classes: ["link", "link_nav_header", "primary"]
        CustomButton:
            text: 'Sidebar link 2'
            name: 'but2'
