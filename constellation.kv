#:import math math
# Custom Styles of default Widgets
<CustomButton@Button>:
    font_name: "Roboto"
    # The following properties are the basic styles
    size_hint_x: None

    font_size: dp(16)
    color: (0, 1, 0, 1)
    # Each button will contain a 'style_classes' property, which will then be called upon in the init
    style_classes: []

    on_state: self.button_pressed()


# Custom Widgets
<CustomNavbar@StackLayout>:
    name: ''
    orientation: 'lr-tb'
    size: self.parent.width, 50
    pos: self.parent.pos[0], self.parent.height - self.height + self.parent.pos[1]

<CustomSidebar@StackLayout>:
    name: ''
    orientation: 'tb-lr'
    size_hint_x: None
    size: 350, self.parent.height
    pos: self.parent.pos

<GalaxyViewer>
    Widget:
        size: root.parent.width, root.parent.height
        canvas:
            Color:
                rgba: 1, 0, 0, 0.5
            Rectangle:
                size: self.width, root.height
                pos: 0, 0
            Color:
                rgb: 0, 1, 0
            Rectangle:
                pos: 100, 100


<GalaxyNavbar>:
    name: 'Global Navbar'
    open_close_menu: open_close_menu
    empire_menu: empire_menu
    system_menu: system_menu
    gap_widget: gap_widget
    galaxy_view: galaxy_view
    system_view: system_view
    style_classes: ['navbar_dark']

    CustomButton:
        id: open_close_menu
        name: 'open_close_menu'
        text: 'Open/Close Menu'
        style_classes: ["link", "link_nav_header", "primary"]

        on_press: root.ui_events['toggle_GameMenu']()

    CustomButton:
        id: empire_menu
        name: 'empire_menu'
        text: 'Empire Overview'
        style_classes: ["link"]

    CustomButton:
        id: system_menu
        name: 'system_menu'
        text: 'System Overview'
        style_classes: ["link"]

    Widget:
        id: gap_widget
        name: 'gap_widget'
        size: 0, 50
        size_hint_x: None
        gap_widget: True

    CustomButton:
        id: galaxy_view
        name: 'galaxy_view'
        text: 'Galaxy View'
        style_classes: ["link"]

    CustomButton:
        id:system_view
        name: 'system_view'
        text: 'System View'
        style_classes: ["link"]


<GameMenu>:
    custom_navbar_game_menu: custom_navbar_game_menu
    orientation: 'vertical'

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    CustomNavbar:
        name: 'Game Menu Navbar'
        id: custom_navbar_game_menu
        style_classes: ['navbar_light']
        size_hint_y: None

        CustomButton:
            text: 'Dank'
            name: 'Button1'
            style_classes: ["link", "link_nav_header", "primary"]

        CustomButton:
            text: 'Buttons'
            name: 'Button2'
            style_classes: ["link"]

        CustomButton:
            text: 'Are'
            name: 'Button3'
            style_classes: ["link"]

        Widget:
            id: gap_widget
            name: 'gap_widget'
            size: 0, 50
            size_hint_x: None
            gap_widget: True

        CustomButton:
            text: 'Dank'
            name: 'Button4'
            style_classes: ["link"]

    BoxLayout:
        orientation: 'horizontal'
        CustomSidebar:
            style_classes: ['sidebar_dark']
            CustomButton:
                name: 'but1'
                text: 'Sidebar link 1'
                style_classes: ['link']
        Button
            text: 'Game Content'

<ConstellationWidget>:
    galaxy_viewer: galaxy_viewer_widget
    galaxy_navbar: galaxy_navbar_widget
    game_menu: game_menu_widget

    GalaxyViewer:
        id: galaxy_viewer_widget
    GalaxyNavbar:
        id: galaxy_navbar_widget
    GameMenu:
        id: game_menu_widget
