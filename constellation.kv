#:import math math
# Custom Styles of default Widgets
<CustomButton>:
    font_name: "Roboto"
    # The following properties are the basic styles
    size_hint_x: None
    size: self.texture_size[0]+16, root.height

    font_size: dp(16)
    color: (0.7, 0.7, 0.7, 1)
    # Each button will contain a 'style_classes' property, which will then be called upon in the init
    style_classes: []

    on_state: self.button_pressed()


# Custom Widgets
<CustomNavbar@StackLayout>:
    orientation: 'lr-tb'
    size: self.parent.width, 50
    pos: self.parent.pos[0], self.parent.height - self.height + self.parent.pos[1]

    canvas:
        Color:
            rgba: 0,0,0,0.75
        Rectangle:
            pos: self.pos
            size: self.size

<GalaxyViewer>
    Widget:
        size: root.parent.width, root.parent.height
        canvas:
            Color:
                rgba: 1, 0, 0, 0.5
            Rectangle:
                size: self.width, root.height
                pos: 0, 0
            Color:
                rgb: 0, 1, 0
            Rectangle:
                pos: 100, 100


<GalaxyNavbar>:
    open_close_menu: open_close_menu
    empire_menu: empire_menu
    system_menu: system_menu
    gap_widget: gap_widget
    galaxy_view: galaxy_view
    system_view: system_view

    CustomNavbar:
        CustomButton:
            id: open_close_menu
            text: 'Open/Close Menu'
            style_classes: ["link", "link_nav_header", "primary"]

            on_press: root.toggle_menu()

        CustomButton:
            id: empire_menu
            text: 'Empire Overview'
            style_classes: ["link"]

        CustomButton:
            id: system_menu
            text: 'System Overview'
            style_classes: ["link"]

        Widget:
            id: gap_widget
            size: 145, 50
            size_hint_x: None

        CustomButton:
            id: galaxy_view
            text: 'Galaxy View'
            style_classes: ["link"]

        CustomButton:
            id:system_view
            text: 'System View'
            style_classes: ["link"]


<GameMenu>:
    BoxLayout:
        size: root.width - 10, root.height - 10
        pos: 5, 5
        orientation: 'vertical'

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint: 1, None
            size: self.width, 50
            Button:
                text: "Navbar"
        BoxLayout:
            size_hint: 1, 11
            orientation: 'horizontal'
            Button:
                size_hint:3, 1
                text: "Sidebar"
            Button
                size_hint: 9, 1
                text: 'Game Content'

<ConstellationWidget>:
    galaxy_viewer: galaxy_viewer_widget
    galaxy_navbar: galaxy_navbar_widget
    game_menu: game_menu_widget

    GalaxyViewer:
        id: galaxy_viewer_widget
    GalaxyNavbar:
        id: galaxy_navbar_widget
    GameMenu:
        id: game_menu_widget
