#:import math math
#:import Window kivy.core.window.Window
# Custom Styles of default Widgets
<Widget>:
    canvas.after:
        Color:
            rgba: (0,1,0,1)
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            dash_offset: 5
            dash_length: 3

<CustomLabel@Label>:
    size: self.texture_size  # For some reason this and the one below make it work.
    size_hint: None, None
    color: 0, 0, 0, 1
    font_size: 16

<TextInputGroup@BoxLayout>:
    size_hint: None, None
    size: self.size[0], 34
    orientation: 'horizontal'

<CustomButton@Button>:
    font_name: "Roboto"
    # The following properties are the basic styles
    size_hint: None, None

    font_size: dp(16)
    color: (0, 1, 0, 1)
    # Each button will contain a 'style_classes' property, which will then be called upon in the init
    style_classes: []

    on_state: self.button_pressed()

# Custom Widgets
<CustomNavbar@StackLayout>:
    name: ''
    orientation: 'lr-tb'
    size: self.parent.width, 50
    pos: self.parent.pos[0], self.parent.height - self.height + self.parent.pos[1]

<CustomSidebar@StackLayout>:
    orientation: 'tb-lr'
    size_hint_x: None
    size: 350, self.parent.height
    pos: self.parent.pos


# Named Widgets
<ColonyMenu@BoxLayout>:
    screen_manager_colony_menu: screen_manager_colony_menu
    id: game_menu_content

    orientation: 'vertical'

    CustomNavbar:
        name: 'Game Menu Navbar'
        id: custom_navbar_game_menu
        style_classes: ['navbar_dark']
        size_hint_y: None
        right: game_menu_content.right
        top: game_menu_content.top

        CustomButton:
            text: 'Overview'
            name: 'overview'
            style_classes: ["link"]
            on_press:
                ScrMan_colony_menu.transition.direction = "right"
                ScrMan_colony_menu.current = self.name

        CustomButton:
            text: 'Economy'
            name: 'economy'
            style_classes: ["link"]
            on_press: root.handle_transition(self.name)

        CustomButton:
            text: 'Industry'
            name: 'industry'
            style_classes: ["link"]
            on_press: root.handle_transition(self.name)

        CustomButton:
            text: 'Fleets'
            name: 'fleets'
            style_classes: ["link"]
            on_press: root.handle_transition(self.name)

        CustomButton:
            text: 'Population'
            name: 'population'
            style_classes: ["link"]
            on_press: root.handle_transition(self.name)

        CustomButton:
            text: 'Politics'
            name: 'politics'
            style_classes: ["link"]
            on_press: root.handle_transition(self.name)

        CustomButton:
            text: 'Diplomacy'
            name: 'diplomacy'
            style_classes: ["link"]
            on_press: root.handle_transition(self.name)

        CustomButton:
            text: 'Research'
            name: 'research'
            style_classes: ["link"]
            on_press:
                ScrMan_colony_menu.transition.direction = "left"
                ScrMan_colony_menu.current = self.name

    ScreenManager:
        size: self.parent.size[0], self.parent.size[1] - 50
        id: screen_manager_colony_menu
        Screen:
            name: "overview"
            Button:
                text: "Overview"
        Screen:
            name: "economy"
            Button:
                text: "Economy"
        IndustryWindow:
        Screen:
            name: "fleets"
            Button:
                text: "Fleets"
        Screen:
            name: "population"
            Button:
                text: "Population"
        Screen:
            name: "politics"
            Button:
                text: "Politics"
        Screen:
            name: "diplomacy"
            Button:
                text: "Diplomacy"
        Screen:
            name: "research"
            Button:
                text: "Research"


<IndustryWindow@Screen>:
    name: "industry"
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size:
            self.size[0], title.size[1] + \
            building_type_form.height + \
            building_runs_form.height + \
            building_factories_form.height + \
            submit_construction_project.height
        CustomLabel:
            id: title
            text: 'Industry Tab'
            font_size: 96
        TextInputGroup:
            id: building_type_form
            CustomLabel:
                size: self.size[0], self.parent.height
                text: 'Building Type: '
            TextInput:
                size_hint: None, None
                size: self.size[0], 28
                id: building_type
                text: ''
        TextInputGroup:
            id: building_runs_form
            CustomLabel:
                size: self.size[0], self.parent.height
                text: 'Runs: '
            TextInput:
                size_hint: None, None
                size: self.size[0], 28
                id: building_runs
                text: ''
        TextInputGroup:
            id: building_factories_form
            CustomLabel:
                size: self.size[0], self.parent.height
                text: 'Factories: '
            TextInput:
                size_hint: None, None
                size: self.size[0], 28
                id: building_factories
                text: ''
        CustomButton:
            id: submit_construction_project
            text: 'Submit'
            style_classes: ['button']
            on_press: root.dank()

# Global Widgets
<GalaxyNavbar>:
    name: 'Global Navbar'
    open_close_menu: open_close_menu
    empire_menu: empire_menu
    system_menu: system_menu
    gap_widget: gap_widget
    galaxy_view: galaxy_view
    system_view: system_view
    style_classes: ['navbar_dark']

    CustomButton:
        id: open_close_menu
        name: 'open_close_menu'
        text: 'Open/Close Menu'
        style_classes: ["link", "link_nav_header", "primary"]

        on_press: app.ui_events['toggle_game_menu']()

    CustomButton:
        id: empire_menu
        name: 'empire_menu'
        text: 'Empire Overview'
        style_classes: ["link"]
        on_press: root.handle_menu_transition(self.name)

    CustomButton:
        id: system_menu
        name: 'system_menu'
        text: 'System Overview'
        style_classes: ["link"]
        on_press: root.handle_menu_transition(self.name)

    CustomButton:
        name: 'colony_overview'
        text: 'Colony Menu'
        style_classes: ['link']
        on_press: root.handle_menu_transition(self.name)

    Widget:
        id: gap_widget
        name: 'gap_widget'
        size: 0, 50
        size_hint_x: None
        gap_widget: True

    CustomButton:
        id: galaxy_view
        name: 'galaxy_view'
        text: 'Galaxy View'
        style_classes: ["link"]

    CustomButton:
        id:system_view
        name: 'system_view'
        text: 'System View'
        style_classes: ["link"]

<GameMenu>:
    orientation: 'horizontal'

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    CustomSidebar:
        pos: root.pos
        style_classes: ['sidebar_dark']
        CustomButton:
            text: 'Sidebar link 1'
            name: 'but1'
            style_classes: ["link", "link_nav_header", "primary"]
        CustomButton:
            text: 'Sidebar link 2'
            name: 'but2'
            style_classes: ['link']

    ScreenManager:
        Screen:
            name: "empire_menu"
            Button:
                text: "EMPIRE MENU"

        Screen:
            name: "system_menu"
            Button:
                text: "SYSTEM MENU"

        Screen:
            name: "colony_menu"
            ColonyMenu:



<ConstellationWidget>:
    galaxy_viewer: galaxy_viewer_widget
    galaxy_navbar: galaxy_navbar_widget
    game_menu: game_menu_widget
    screen_manager_constellation_widget: screen_manager_constellation_widget

    GalaxyViewer:
        id: galaxy_viewer_widget
    GalaxyNavbar:
        id: galaxy_navbar_widget
    ScreenManager:
        size: Window.size[0] - 40, Window.size[1] - 90
        pos: 20, 20
        id: screen_manager_constellation_widget
        Screen:
            name: "game_menu"
            GameMenu:
                id: game_menu_widget
        Screen:
            name: "blank_screen"
