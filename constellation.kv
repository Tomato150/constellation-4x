                name: 'economy'
                style_classes: ["link"]

            CustomButton:
                text: 'Industry'
                name: 'industry'
                style_classes: ["link"]

            CustomButton:
                text: 'Fleets'
                name: 'fleets'
                style_classes: ["link"]

            CustomButton:
                text: 'Population'
                name: 'population'
                style_classes: ["link"]

            CustomButton:
                text: 'Politics'
                name: 'politics'
                style_classes: ["link"]

            CustomButton:
                text: 'Diplomacy'
                name: 'diplomacy'
                style_classes: ["link"]

            CustomButton:
                text: 'Research'
                name: 'research'
                style_classes: ["link"]

        IndustryTab:
            orientation: 'vertical'
            BoxLayout:
                size_hint: [None, None]
                orientation: 'horizontal'
                CustomButton:
                    text: 'Dank memes'
                    name: 'dank memes'
                    style_classes: ["button"]

                CustomButton:
                    text: 'Dank memes'
                    name: 'dank memes'
                    style_classes: ["button"]

            BoxLayout:
                size_hint: [None, None]
                orientation: 'horizontal'
                CustomButton:
                    text: 'Dank memes'
                    name: 'dank memes'
                    style_classes: ["button"]

                CustomButton:
                    text: 'Dank memes'
                    name: 'dank memes'
